ScreenManagement:
    MainScreen: 
    LightsScreen:
    ValvesScreen:
    SettingsScreen:

<Button>:
    background_color: 0, 0, 1, 1
    font_size: 40

<MainScreen>:
    GridLayout:
        name: "main"
        padding: 10
        rows: 4
        spacing: 10
        Button:
            on_release: app.root.current = "settings"
            text: "Settings"
        Button:
            on_release: app.root.current = "lights"
            text: "Lights"
        Button:
            on_release: app.root.current = "valves"
            text: "Valves"
<SettingsScreen>:
    GridLayout:
        name: "settings"
        padding: 10
        rows: 2
        spacing: 10
        Button:
            text: "Wifi"

<LightsScreen>:
    GridLayout:
        name: "lights"
        padding: 10
        cols: 2
        spacing: 10
        Button:
            text: "on/off"
        Label:
            text: "on or off"
        Button:
            text: "current state"
        Label:
            text: "current state here"
        Button:
            text: "time on"
        Label:
            text: "time on here"
        Button:
            text: "time off"
        Label:
            text: "time off here"

<ValvesScreen>:
    GridLayout:
        name: "valves"
        padding: 10
        cols: 1
        spacing: 10
        Button:
            text: "Valve 1"
        Button:
            text: "Valve 2"
        Button:
            text: "Valve 3"
        Button:
            text: "Valve 4"
        Button:
            text: "Valve 5"
        Button:
            text: "Valve 6"
        Button:
            text: "Valve 7"
        Button:
            text: "Valve 8"
        Button:
            text: "Valve 9"
        Button:
            text: "Valve 10"

            


        
        
   

























